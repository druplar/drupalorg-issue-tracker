{
    "name": "Drupal Issues",
    "description": "Provides a simple way to track issues of interest",
    "version": "1.0.1",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "storage",
        "*://*.drupal.org/"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/background.js"
            ]
        }
    }
}